<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:id="@+id/Accelerometer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="161dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:id="@+id/Gyroscope"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Accelerometer"
        android:layout_alignStart="@+id/Accelerometer"
        android:layout_alignRight="@+id/Accelerometer"
        android:layout_alignEnd="@+id/Accelerometer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximity"
        android:id="@+id/Proximity"
        android:layout_below="@+id/Gyroscope"
        android:layout_alignLeft="@+id/Gyroscope"
        android:layout_alignStart="@+id/Gyroscope"
        android:layout_marginTop="39dp"
        android:layout_alignRight="@+id/Gyroscope"
        android:layout_alignEnd="@+id/Gyroscope" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedometer"
        android:id="@+id/Pedometer"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/Proximity"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
